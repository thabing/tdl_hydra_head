<div class="row-fluid">
  <div class="span12">
  </div>
  <!-- nested row LEFT -->
  <div class="row-fluid">
    <div class="span2">  &nbsp;
    </div>
    <!-- nested Fluid RIGHT -->
    <div class="row-fluid">
      <div class="span9">
        <br>

        <h2><%= facet_field_labels[params[:id]] %></h2>

        <div class="facet_pagination top">
          <%= render :partial => 'facet_pagination' %>
        </div>

        <ul class="facet_extended_list">
					<% @pagination.items.each do |item| %>
							<li>
								<% if facet_in_params?(params[:id], item.value) %>
										<%= render_selected_facet_value(params[:id], item) %>
								<% else %>
										<%= render_facet_value(params[:id], item) %>
								<% end -%>
							</li>
					<% end %>
				</ul>

        <div class="facet_pagination bottom">
          <%= render :partial => 'facet_pagination' %>
        </div>
      </div>  <!-- class="span9" -->
    </div>  <!-- class="row-fluid" -->
  </div>  <!-- class="row-fluid" -->
</div>  <!-- class="row-fluid" -->
