<%= form_tag catalog_index_path, :class => 'advanced', :method => :get do  %>  

  <%= search_as_hidden_fields(:params => advanced_search_context) %>  

  <%= render 'catalog/constraints', :localized_params => advanced_search_context %>

  <div id="advanced_search">
    <%= render 'advanced/advanced_search_fields' %>
  </div>        
  
  <div class="pull-right" style="margin-right: 80px">
    <%= hidden_field_tag(:search_field, BlacklightAdvancedSearch.config[:url_key]) %>
    <%= submit_tag 'Search', :class=>'btn btn-primary', :id=>'advanced_search' %>
    <%= link_to "Clear form", {:controller => "advanced", :action => "index"}, :class =>"btn" %>
  </div>
<% end %>
