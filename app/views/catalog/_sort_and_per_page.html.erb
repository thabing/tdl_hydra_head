      <div class="span3">

      <button class="btn btn-mini dropdown-toggle" data-toggle="dropdown">Sort by relevance <span class="caret"></span></button>
                <ul class="dropdown-menu">
                  <li><a href="#">Relevance</a></li>
                  <li><a href="#">Another action</a></li>
                  <li><a href="#">Something else here</a></li>
                </ul>

      </div>
      <div class="span3"> <button class="btn btn-mini dropdown-toggle" data-toggle="dropdown">25 per page <span class="caret"></span></button>
      <ul class="dropdown-menu">
      <li><a href="#">50</a></li>
      <li><a href="#">100</a></li>
      <li><a href="#">Display All</a></li>
      </ul>
      </div>

      <div class="span1 pull-right"><a href="#"><i class="icon-th-list"></i></a></div>
      <div class="span1 pull-right"><a href="#"><i class="icon-th"></i></a></div>
      </div><hr>
</div>
